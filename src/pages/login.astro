---
export const prerender = false;

import DefaultLayout from '../layouts/DefaultLayout.astro';
import Logo from '../assets/images/logo.png';

const message = Astro.url.searchParams.get('message') || "";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  try {
    const apiResponse = await fetch(`${Astro.url.origin}/api/login`, {
      method: "POST",
      body: formData,
    });
    const apiResult = await apiResponse.json();
    if (apiResponse.status.toString().startsWith("4")) {
      const error = apiResult.error || "Login failed. Please try again.";
      return Astro.redirect(`/login?message=${encodeURIComponent(error)}`);
    }
    
    if (apiResult.session) {
      const { access_token, refresh_token } = apiResult.session;

      Astro.cookies.set("sb-access-token", access_token, { path: "/", httpOnly: true, secure: true });
      Astro.cookies.set("sb-refresh-token", refresh_token, { path: "/", httpOnly: true, secure: true });
      
      return Astro.redirect("/dashboard");
    }
    const err = "An unexpected error occurred. Please try again.";
    return Astro.redirect(`/login?message=${encodeURIComponent(err)}`);
  } catch (err) {    
    const error = "An unexpected error occurred. Please try again.";
    return Astro.redirect(`/login?message=${encodeURIComponent(error)}`);
  }
}
---

<DefaultLayout>
  <section class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 p-8 bg-white rounded-lg shadow-md">
        <div class="flex flex-col items-center">
            <img src={Logo.src} alt="Logo" class="h-32 w-auto mb-4"/>
        </div>
<h2 class="text-2xl font-bold mb-4 text-black text-center">Welcome Back!</h2>
<p class="text-center">Log in to your account.</p>
<form method="POST" class="space-y-4 w-full max-w-sm">
  {message && (
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline">{message}</span>
    </div>
  )}
  <div>
    <label for="email" class="block text-sm font-medium text-black">Email</label>
    <input type="text" id="email" name="email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500">
  </div>
  <div>
    <label for="password" class="block text-sm font-medium text-black">Password</label>
    <input type="password" id="password" name="password" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500">
  </div>
  <div>
    <button type="submit" class="w-full bg-pink-500 text-white py-2 px-4 rounded-md hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">Login</button>
  </div>
</form>
<p class="text-center">
    <a href="/forgot-password" class="text-pink-500 hover:underline">Forgot Password?</a>
</p>
<p class="mt-4 text-sm text-gray-600 text-center">Don't have an account? <a href="/signup" class="text-pink-500 hover:underline">Sign Up</a>.</p>
    </div>
  </section>
</DefaultLayout>
