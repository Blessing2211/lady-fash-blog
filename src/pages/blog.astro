---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import { sizingClass } from '../constants/index.ts';
import BlogBanner from '../assets/images/blogbanner.jpg'
import { blogPosts } from '../data';
import Postcard from '../components/post/postcard.astro';
---

<DefaultLayout>
    <main>
        <div class="relative">
            <img src={BlogBanner.src} alt="Blog Banner" class="w-full h-48 object-cover mb-6 rounded-lg shadow-md" />
            <div class={`${sizingClass} absolute top-[5%] left-0 w-full h-full flex items-center justify-center`}>
                <div class="flex flex-col items-center text-center  p-4 rounded-md">
                    <h2 class="text-black text-4xl font-bold">Blog</h2>
                </div>
            </div>
        </div>
        <div class={sizingClass}>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                {blogPosts.map((post) => ( 
                    <Postcard post={post} />
                ))}  
            </div>
            <div class="w-full">
                <!-- Pagination could go here in the future -->
                 <ul class="w-full mx-auto flex justify-center my-8">
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-200 text-gray-700 rounded-md cursor-not-allowed">Previous</li>
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-500 text-white rounded-md">1</li>
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-500 text-white rounded-md">2</li>
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-500 text-white rounded-md">3</li>
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-500 text-white rounded-md">...</li>
                    <li class="inline-block mx-1 px-3 py-2 bg-pink-200 text-gray-700 rounded-md cursor-not-allowed">Next</li>
                 </ul>
            </div>
        </div>
        
    </main>
</DefaultLayout>
